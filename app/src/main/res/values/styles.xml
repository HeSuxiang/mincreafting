    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/list_background</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/list_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

