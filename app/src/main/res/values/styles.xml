        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="Base.Theme.Design.gray" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="myToolbarColor">@color/colorPrimary_gray</item>
        <item name="colorPrimary">@color/colorPrimary_gray</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_gray</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary_white</item>
