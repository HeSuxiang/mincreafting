<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />
    <!-- Customize your theme here. -->
    <style name="AppTheme" parent="Base.Theme.Design.black"></style>

    <style name="Base.Theme.Design.red" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="myToolbarColor">@color/colorPrimary_red</item>
        <item name="colorPrimary">@color/colorPrimary_red</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_red</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary_white</item>
        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <item name="colorAccent">@color/colorAccent_red</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="Base.Theme.Design.black" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="myToolbarColor">@color/colorPrimary_black</item>
        <item name="colorPrimary">@color/colorPrimary_black</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_black</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary_white</item>
        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <item name="colorAccent">@color/colorAccent_black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="Base.Theme.Design.pink" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="myToolbarColor">@color/colorPrimary_pink</item>
        <item name="colorPrimary">@color/colorPrimary_pink</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_pink</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary_white</item>
        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
