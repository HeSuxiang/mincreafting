<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cuisanzhang.mincreafting">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--android:name=".MyApplication"-->

        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
        <activity
            android:name=".ActivityLoding"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityListViewShowBlocks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityTip"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ActivityWebViewFeedback"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivitySearch"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.cuisanzhang.mincreafting.GlideConfiguration"
            android:value="GlideModule" />

        <activity
            android:name=".FragmentMainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ActivityTutorial"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityTutorialList"
            android:screenOrientation="portrait" />
    </application>

</manifest>